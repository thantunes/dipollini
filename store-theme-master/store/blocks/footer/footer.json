      "rich-text#footer-mobile",
      "flex-layout.row#feitocomorgulho"
    ],
    "props": {
      "blockClass": "payment-methods",
      "paddingTop": 4,
      "paddingBottom": 4,
      "rowGap": 4
    }
  },
  "flex-layout.row#1-footer-mobile": {
    "props": {
      "paddingTop": 4,
      "paddingBottom": 4
    },
    "children": [

      "flex-layout.row#logo-sociais-mobile-mobile",
      
      "vtex.menu@2.x:menu#masculino-mobile",
      "vtex.menu@2.x:menu#feminino-mobile",
      "vtex.menu@2.x:menu#institucional-mobile",
      
      "vtex.menu@2.x:menu#atendimento-mobile",
    
      "flex-layout.col#formas-de-pagamento-e-seguranca"

    ]
  },

  "flex-layout.row#logo-sociais-mobile-mobile":{
    "children": [
      "image#logofooter",
      "social-networks"
    ],
    "props": {
      "blockClass": "logo-sociais-mobile"
    }
  },


  "rich-text#footer-mobile": {
    "props": {
      "text": "Todos os direitos reservados ® - Di Pollini | Política de Privacidade Calçados Di Pollini Ltda. – CNPJ: 02.476.052/0001-64 – Rua Hipodromo,1509 Mooca-São Paulo-SP",
